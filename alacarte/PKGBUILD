pkgname=alacarte
pkgver=0.13.4
pkgrel=1
pkgdesc="Menu editor for GNOME"
arch=('any')
license=('LGPL')
url="http://git.gnome.org/browse/alacarte/"
depends=('python2-gobject' 'gnome-panel')
makedepends=('intltool' 'pygtk')
install=$pkgname.install
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz)
sha256sums=('a45953dfbd799d718ebafe850c0b20e581827023e8da4ee906edb1f60d6a4098')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              PYTHON=/usr/bin/python2
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install
}
