# $Id$
# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=gnome-flashback
pkgver=3.16.1
pkgrel=1
pkgdesc="GNOME Flashback session"
arch=('i686' 'x86_64')
url="https://wiki.gnome.org/Projects/GnomeFlashback"
license=('GPL')
depends=('gnome-panel' 'gnome-session' 'gnome-settings-daemon' 'metacity' 'polkit-gnome')
makedepends=('intltool' 'gnome-common')
optdepends=('gnome-background: default background'
            'gnome-screensaver: lock srceen'
            'network-manager-applet: network management'
            'notification-daemon: desktop notifications')
install=$pkgname.install
source=(http://ftp.gnome.org/pub/GNOME/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz
        0001-Add-autostart-file-for-nm-applet.patch)
sha256sums=('b5424a28b2de694ae9bd170b73dfc6da62358c0e3527631b92be9dc400b52f90'
            'a7911a273dd2ace9c2fe85fe03f8d7f9ae0e9f9658a9bdbbfa944aa4c3c40afb')

prepare() {
  cd $pkgname-$pkgver

  # Add autostart file for nm-applet
  patch -Np1 -i ../0001-Add-autostart-file-for-nm-applet.patch

  # Add polkit-gnome to required components
  sed -i 's/^RequiredComponents=\(.*\)/RequiredComponents=\1polkit-gnome-authentication-agent-1;/' \
    data/gnome-flashback-*.session.in

  autoreconf -fi
}

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib/$pkgname \
              --disable-schemas-compile
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
