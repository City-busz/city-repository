# $Id$
# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=gst-plugins-espeak
pkgver=0.4.0
pkgrel=1
pkgdesc="Use espeak as a sound source for gstreamer"
arch=('i686' 'x86_64')
url="http://wiki.sugarlabs.org/go/Activity_Team/gst-plugins-espeak"
license=('LGPL')
depends=('gst-plugins-base-libs' 'espeak')
#makedepends=('intltool')
source=(http://download.sugarlabs.org/sources/honey/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('d09e3584c6313a8bc7872bd6d3433a93')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
