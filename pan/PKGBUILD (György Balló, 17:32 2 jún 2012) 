# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=pan
pkgver=0.137
pkgrel=1
pkgdesc="Usenet newsreader for GNOME"
arch=('i686' 'x86_64')
url="http://pan.rebelbase.com/"
license=('GPL')
depends=('gmime' 'gtkspell3' 'libnotify' 'libgnome-keyring')
makedepends=('intltool')
source=(http://pan.rebelbase.com/download/releases/$pkgver/source/$pkgname-$pkgver.tar.bz2)
sha1sums=('372f1f6406e2fcd9ce413774730975560f546fcf')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --with-gtk3 --with-gnutls
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
