# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=rhythmbox-ubuntuone
pkgver=4.2.0
pkgrel=1
pkgdesc="A Rhythmbox plugin that integrates Ubuntu One features"
arch=('any')
url="https://launchpad.net/rhythmbox-ubuntuone"
license=('GPL')
depends=('libubuntuone' 'rhythmbox')
makedepends=('python2-distutils-extra')
install=$pkgname.install
source=(http://launchpad.net/rhythmbox-ubuntuone/stable-4-2/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('d172252e79fb0e72cd7aeed1f6889d93')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  python2 setup.py install --root=$pkgdir/ --optimize=1
}
