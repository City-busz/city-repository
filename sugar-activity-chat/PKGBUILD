pkgname=sugar-activity-chat
_pkgname=Chat
pkgver=81
pkgrel=1
pkgdesc="Sugar activity for text chatting"
arch=('any')
url="http://wiki.sugarlabs.org/go/Activities/Chat"
license=('GPL')
groups=('sugar-fructose')
depends=('sugar')
source=(http://download.sugarlabs.org/sources/sucrose/fructose/$_pkgname/$_pkgname-$pkgver.tar.bz2)
md5sums=('d92295711b9207b1e6ca3967da7bd913')

prepare() {
  cd $_pkgname-$pkgver

  # Python2 fix
  sed -i 's@^#!.*python$@#!/usr/bin/python2@' setup.py
}

package() {
  cd $_pkgname-$pkgver
  python2 setup.py install --prefix "$pkgdir/usr"
}
