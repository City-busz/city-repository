pkgname=sugar-activity-imageviewer
_pkgname=ImageViewer
pkgver=59
pkgrel=1
pkgdesc="Image viewer for Sugar"
arch=('any')
url="http://wiki.sugarlabs.org/go/Activities/Image_Viewer"
license=('GPL')
groups=('sugar-fructose')
depends=('sugar')
source=(http://download.sugarlabs.org/sources/sucrose/fructose/$_pkgname/$_pkgname-$pkgver.tar.bz2)
md5sums=('d967cdb4e9ecebf2d634431c2beb629a')

prepare() {
  cd $_pkgname-$pkgver

  # Python2 fix
  sed -i 's@^#!.*python$@#!/usr/bin/python2@' setup.py
}

package() {
  cd $_pkgname-$pkgver
  python2 setup.py install --prefix "$pkgdir/usr"
}
