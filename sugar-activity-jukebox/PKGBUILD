# $Id$
# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=sugar-activity-jukebox
_pkgname=Jukebox
pkgver=32
pkgrel=1
pkgdesc="Media player for Sugar"
arch=('any')
url="http://sugarlabs.org/"
license=('GPL')
groups=('sugar-fructose')
depends=('sugar' 'gst-plugins-base')
optdepends=('gst-plugins-good: Extra media codecs'
            'gst-plugins-bad: Extra media codecs'            
            'gst-plugins-ugly: Extra media codecs'
            'gst-libav: Extra media codecs')
source=(http://download.sugarlabs.org/sources/sucrose/fructose/$_pkgname/$_pkgname-$pkgver.tar.bz2)
md5sums=('8aa4d5d82a4d3ec3e75612aba9df14c4')

prepare() {
  cd $_pkgname-$pkgver

  # Python2 fix
  sed -i 's@^#!.*python$@#!/usr/bin/python2@' setup.py
}

package() {
  cd $_pkgname-$pkgver
  python2 setup.py install --prefix "$pkgdir/usr"
}
