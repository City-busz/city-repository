# $Id$
# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=sugar-activity-log
_pkgname=Log
pkgver=37
pkgrel=1
pkgdesc="Sugar activity to view log files"
arch=('any')
url="http://wiki.sugarlabs.org/go/Activities/Log"
license=('GPL')
groups=('sugar-activities')
depends=('sugar')
source=(http://download.sugarlabs.org/sources/sucrose/fructose/$_pkgname/$_pkgname-$pkgver.tar.bz2)
md5sums=('8ef6eaecdfb151395ee7a6e9dbe9a9e4')

prepare() {
  cd $_pkgname-$pkgver

  # Python2 fix
  sed -i 's@^#!.*python$@#!/usr/bin/python2@' setup.py
}

package() {
  cd $_pkgname-$pkgver
  python2 setup.py install --prefix "$pkgdir/usr"
}
