pkgname=sugar-activity-read
_pkgname=Read
pkgver=114
pkgrel=1
pkgdesc="Sugar activity to read books"
arch=('any')
url="http://wiki.sugarlabs.org/go/Activities/Read"
license=('GPL')
groups=('sugar-activities')
depends=('sugar' 'evince' 'python2-beautifulsoup3' 'python2-speechd')
source=(http://download.sugarlabs.org/sources/sucrose/fructose/$_pkgname/$_pkgname-$pkgver.tar.bz2)
md5sums=('9e5a243e4b443e3396b32f8b2b927cc6')

prepare() {
  cd $_pkgname-$pkgver

  # Python2 fix
  sed -i 's@^#!.*python$@#!/usr/bin/python2@' setup.py
}

package() {
  cd $_pkgname-$pkgver
  python2 setup.py install --prefix "$pkgdir/usr"
}
