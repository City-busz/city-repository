pkgname=sugar-activity-write
_pkgname=Write
pkgver=96
pkgrel=1
pkgdesc="Sugar activity to edit texts"
arch=('any')
url="http://wiki.sugarlabs.org/go/Activities/Write"
license=('GPL')
groups=('sugar-fructose')
depends=('sugar' 'abiword' 'python2-speechd')
source=(http://download.sugarlabs.org/sources/sucrose/fructose/$_pkgname/$_pkgname-$pkgver.tar.bz2)
md5sums=('4702709c72ee3790380bfa33e47cb6fb')

prepare() {
  cd $_pkgname-$pkgver

  # Python2 fix
  sed -i 's@^#!.*python$@#!/usr/bin/python2@' setup.py
}

package() {
  cd $_pkgname-$pkgver
  python2 setup.py install --prefix "$pkgdir/usr"
}
