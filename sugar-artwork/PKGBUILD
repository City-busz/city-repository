# $Id$
# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=sugar-artwork
pkgver=0.108.1
pkgrel=1
pkgdesc="Sugar icons and themes"
arch=('i686' 'x86_64')
url="http://sugarlabs.org/"
license=('LGPL')
makedepends=('gtk2' 'gtk3' 'icon-naming-utils' 'icon-slicer' 'python2')
optdepends=('gtk2: GTK+ 2 theme'
            'gtk3: GTK+ 3 theme')
install=$pkgname.install
source=(http://download.sugarlabs.org/sources/sucrose/glucose/$pkgname/$pkgname-$pkgver.tar.xz)
sha256sums=('29a01c2c9d0ba79e4d0338025357b8b3976422298cc8cf4f3a2ffc0df9bd2c2b')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
