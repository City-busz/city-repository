pkgname=sugar-base
pkgver=0.98.0
pkgrel=1
pkgdesc="Helpers for the development of Sugar services and activities (deprecated)"
arch=('i686' 'x86_64')
url="http://sugarlabs.org/"
license=('LGPL')
depends=('python2-decorator' 'python2-gobject2')
makedepends=('intltool' 'pygtk')
source=(http://download.sugarlabs.org/sources/sucrose/glucose/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('0513b1909d57e69d71d92d244576d32e')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
