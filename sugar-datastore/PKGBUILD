# $Id$
# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=sugar-datastore
pkgver=0.102.0
pkgrel=1
pkgdesc="Sugar datastore service"
arch=('i686' 'x86_64')
url="http://sugarlabs.org/"
license=('GPL')
depends=('sugar-toolkit-gtk3' 'python2-xapian')
source=(http://download.sugarlabs.org/sources/sucrose/glucose/$pkgname/$pkgname-$pkgver.tar.xz)
md5sums=('a4babf1250b4cc14c95e1380c013faf5')

prepare() {
  cd $pkgname-$pkgver

  # Python2 fix
  sed -i 's@^#!.*python$@#!/usr/bin/python2@' bin/copy-to-journal
}

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
