pkgname=sugar-toolkit-gtk3
pkgver=0.108.1
pkgrel=1
pkgdesc="Sugar GTK library"
arch=('i686' 'x86_64')
url="http://sugarlabs.org/"
license=('LGPL')
depends=('alsa-lib' 'gtk3' 'librsvg' 'libsm' 'python2-cairo' 'python2-dateutil' 'python2-dbus'
         'python2-decorator' 'python2-gobject' 'python2-telepathy' 'shared-mime-info' 'unzip'
         'webkit2gtk')
makedepends=('intltool' 'gobject-introspection')
source=(http://download.sugarlabs.org/sources/sucrose/glucose/$pkgname/$pkgname-$pkgver.tar.xz)
sha256sums=('4f23e452f1b1e0b8ddfb49c4524bb2603b6347ea8b15f4f16234c34cfa1ec957')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
