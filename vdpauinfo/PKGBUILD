# $Id: PKGBUILD 79699 2012-11-11 10:29:05Z bgyorgy $
# Maintainer: Balló György <ballogyor+arch at gmail dot com>
# Contributor: Bart Verhoeven <nepherte at gmail dot com>

pkgname=vdpauinfo
pkgver=0.0.6
pkgrel=6
pkgdesc="Command line utility for querying the capabilities of a VDPAU device"
arch=('i686' 'x86_64')
url="http://cgit.freedesktop.org/~aplattner/vdpauinfo"
license=('MIT')
depends=('libvdpau')
source=(http://cgit.freedesktop.org/~aplattner/vdpauinfo/snapshot/$pkgname-$pkgver.tar.xz)
sha256sums=('1551d13a7fa450b620476192aa67ea3b735614577d47115850632e1adb5a960b')

build() {
  cd "$srcdir/$pkgname-$pkgver"
 
  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install
  install -D -m644 "$srcdir/$pkgname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

